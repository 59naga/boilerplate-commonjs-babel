{
  "main": "lib",
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "ava --watch",
    "test": "ava",
    "lint": "eslint src test",
    "cover": "abby cover:*",
    "cover:test": "nyc --reporter=lcov --reporter=text ava",
    "cover:report": "node -e \"if(process.env.TRAVIS){}else{process.exit(1)}\" && codeclimate-test-reporter < coverage/lcov.info || echo skip coverage report",
    "build": "cross-env NODE_ENV=production abby build:*",
    "build:compile": "babel -V && babel src --out-dir lib --source-maps"
  },
  "abigail": {
    "plugins": {
      "watch": false,
      "parse": "serial",
      "launch": "force"
    }
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "devDependencies": {
    "abigail": "^1.3.3",
    "ava": "^0.13.0",
    "babel-cli": "^6.6.5",
    "babel-eslint": "^6.0.2",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-espower": "^2.1.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.7.2",
    "chokidar": "^1.4.3",
    "codeclimate-test-reporter": "^0.3.1",
    "cross-env": "^1.0.7",
    "eslint": "^2.6.0",
    "eslint-config-airbnb": "^6.2.0",
    "nyc": "^6.1.1"
  }
}
